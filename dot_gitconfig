# Import user-specific settings (e.g. `user.name`, `user.email`)
[include]
	path = ~/.my.gitconfig
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	ff = only
[init]
	defaultBranch = main

# Diff with Delta settings
[delta]
	# Enable configs and themes from ~/.config/delta/
	features = unobtrusive-line-numbers decorations mellow-barbet# gruvmax-fang
	navigate = true    # use n and N to move between diff sections
	side-by-side = true # diff view

# Import themes
[include]
	path = ~/.config/delta/themes.gitconfig

# Import configs
[include]
	path = ~/.config/delta/delta.gitconfig

[core]
	pager = delta
	editor = nvim

[interactive]
    diffFilter = delta --color-only

[merge]
	; conflictstyle = zdiff3
	; conflictstyle = diff2
	conflictstyle = diff3
	tool = nvimdiff

[diff]
    colorMoved = default
	tool = nvimdiff
	; tool = delta

